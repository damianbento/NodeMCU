// start print press
u8g2.clearBuffer();
u8g2.sendBuffer(); 
u8g2.clearDisplay();   
    u8g2.setFont(u8g2_font_inb30_mr);  // choose a suitable font
    u8g2.setCursor(1,55);
    u8g2.print(presion);
    u8g2.setFont(u8g2_font_inb19_mf);
    //u8g2.setCursor(67,55);
   // u8g2.print("C");
    //u8g2.drawUTF8(68, 50, "%");
