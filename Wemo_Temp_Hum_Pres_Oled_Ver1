const char DEGREE_SYMBOL[] = { 0xB0, '\0' };  //// Definicion el simbolo de Grado para el caso de la temperatura

void setup()
{
    Serial.begin(9600);
    u8g2.begin();
    Blynk.begin(auth, ssid, pass);
    dht.begin();
    timer.setInterval(2000, sendUptime);
    if ( !bmp.begin() ){
    Serial.println("BMP280 no encontrado!");
    while (1);  
      }
}

void loop()
{
  Blynk.run();
  timer.run();
}

void sendUptime()
{
  float h = dht.readHumidity();
  float t = dht.readTemperature(); 
int tem = t;
int hum = h;
  temperatura = bmp.readTemperature();
  presion = bmp.readPressure()/100;
  
  // Comprobamos si ha habido alg√∫n error en la lectura
  if (isnan(h) || isnan(t)) {
    Serial.println("Error obteniendo los datos del sensor DHT11");
    return;
  }
////   


//////////  Oled impresion de Temperatura + simbolo  /////////////////

u8g2.clearBuffer(); 
    u8g2.setFont(u8g2_font_inb38_mf);  // choose a suitable font
    u8g2.setCursor(3,55);
    u8g2.print(tem);
    u8g2.setFont(u8g2_font_inb19_mf);
    u8g2.setCursor(67,55);
    u8g2.print("C");
    u8g2.drawUTF8(83, 45, DEGREE_SYMBOL);
    u8g2.drawXBMP( 100, 10, Temperature_20Icon_width, Temperature_20Icon_height, Temperature_20Icon_bits);
u8g2.sendBuffer();
delay(4000);

//////////  Oled impresion de Humedad + simbolo  /////////////////
u8g2.clearBuffer();
u8g2.sendBuffer();    
    u8g2.setFont(u8g2_font_inb38_mf);  // Set font de el valor
    u8g2.setCursor(3,55);
    u8g2.print(hum);
    u8g2.setFont(u8g2_font_inb19_mf); // set font del simbolo C y %
    u8g2.setCursor(67,55);
    u8g2.print("C");
    u8g2.drawUTF8(68, 50, "%");
    u8g2.drawXBMP( 90, 10, hum_width, hum_height, hum_bits);   //pedido de impresion del grafico Hum
   u8g2.sendBuffer();
delay(4000);


//////////  Oled impresion de Presion + simbolo  /////////////////

u8g2.clearBuffer();
u8g2.sendBuffer();    
    u8g2.setFont(u8g2_font_inb30_mr);  
    u8g2.setCursor(1,55);
    u8g2.print(presion);
    //u8g2.setFont(u8g2_font_inb19_mf);
    //u8g2.setCursor(67,55);
    //u8g2.print("C");
    //u8g2.drawUTF8(68, 50, "%");
    u8g2.drawXBMP( 99, 15, press_width, press_height, press_bits);
   u8g2.sendBuffer();
delay(4000);




/////////// Impresion de datos via serial ///////////////
  
 
  Serial.println("Humidity and temperature\n\n");
  Serial.print("Current humidity = ");
  Serial.print(h);
  Serial.print("%  ");
  Serial.print("temperature = ");
  Serial.print(t); 
  Serial.print("pression = ");
  Serial.print(presion);
  Serial.print("temperature1 = ");
  Serial.print(temperatura);

////////// Envio de la informaicon a los pines Virtuales del Blynk 
  
  Blynk.virtualWrite(V8, t);
  Blynk.virtualWrite(V9, h); 
  Blynk.virtualWrite(V10, temperatura);
  Blynk.virtualWrite(V11, presion);

}
