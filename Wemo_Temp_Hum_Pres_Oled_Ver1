#define DHTTYPE DHT11   ////definicion del sensor de temperatura y humedad
#define dht_dpin D4    /// definicion del pin para el sensor de humedad/temp si pones D4 es el pin 2

U8G2_SH1106_128X64_NONAME_F_HW_I2C u8g2(U8G2_R0, /* reset=*/ U8X8_PIN_NONE);  ///Definicion del Oled en I2c
DHT dht(dht_dpin, DHTTYPE); 
SimpleTimer timer;
Adafruit_BMP280 bmp;  //definicion del sensor de presion y temperatura

//////////////// token + ssid + Pass _ conexion para Blynk ////////////

char auth[] = "*********************************";
